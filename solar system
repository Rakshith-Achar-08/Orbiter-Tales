        }

        .orbit {
            position: absolute;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            animation-timing-function: linear;
            animation-iteration-count: infinite;
        }

        .planet {
            position: absolute;
            border-radius: 50%;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
        }

        .mercury-orbit { width: 140px; height: 140px; animation: rotate 8s linear infinite; }
        .mercury { width: 12px; height: 12px; background: #8c7853; }

        .venus-orbit { width: 200px; height: 200px; animation: rotate 12s linear infinite; }
